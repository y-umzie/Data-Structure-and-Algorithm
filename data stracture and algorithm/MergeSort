//program for Merge Sort
#include<stdio.h>
int main()
{
    // int a[]= {10,30,50,60,70},b[]={20,40,65,80,90},c[10] ;
    int i=0,j=0,k=0,n1,n2;
    printf("Enter size of first array : ");
    scanf("%d",&n1);
    int a[n1];
    printf("Enter 1st array Elements : ");
    for (int i = 0; i < n1; i++)
    {
        scanf("%d",&a[i]);
    }
    
    printf("Enter size of second array : ");
    scanf("%d",&n2);
    int b[n2],c[n1+n2];
    printf("Enter 2nd array Elements : ");
    for (int i = 0; i < n2; i++)
    {
        scanf("%d",&b[i]);
    }

    while(i<n1 && j<n2 )
    {
        if(a[i]< b[j])
        {
            c[k] =a[i];
            i++;
        }else{
            c[k] = b[j];
            j++;
        }
        k++;
    }
    while(i<5)
    {
        c[k]=a[i];
        i++;
        k++;
    }
    while(j<5)
    {
        c[k]=b[j];
        j++;
        k++;
    }
    printf("\n After sort : ");
    int n = n1+n2; 
    for (int i = 0; i < n ; i++)
    {
        printf("%d\t",c[i]);
    }
}
